<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN" "https://checkstyle.org/dtds/suppressions_1_0.dtd">

<suppressions>
    <suppress checks="FinalClass"
              files="CreditCardPrintApplication.java"/>
    <suppress checks="HideUtilityClassConstructor"
              files="CreditCardPrintApplication.java" />

    <!-- no need for doc on variables-->
    <suppress files="[a-zA-Z0-9]*" checks="JavadocVariable" />

    <suppress files="data" checks="DesignForExtension" />
    <suppress files="data" checks="MissingJavadocMethod" />
    <suppress files="data" checks="OperatorWrap" />

    <!-- no need for check style on generated code -->
    <suppress files="openapi" checks="." />
    <suppress files="^((?!d/\w+MapperImpl\.java).)*$" checks="." />
</suppressions>
